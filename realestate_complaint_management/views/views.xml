<odoo>
  <data>
    <!-- explicit list view definition -->

    <record model="ir.ui.view" id="realestate_complaint_management.list">
      <field name="name">realestate_complaint_management list</field>
      <field name="model">realestate.complaint</field>
      <field name="arch" type="xml">
        <tree>
          <field name="customer_name"/>
          <field name="complaint_reference"/>
          <field name="email"/>
          <field name="complaint_type"/>
          <field name="state"/>
        </tree>
      </field>
    </record>

    <record model="ir.ui.view" id="realestate_complaint_management.form">
      <field name="name">realestate_complaint_management form</field>
      <field name="model">realestate.complaint</field>
      <field name="arch" type="xml">
        <form string="complaint detail">
              <header>

                <button name="action_review_complaint" string="Review" type="object" attrs="{'invisible': [('state', 'not in', ['draft'])]}"/>
                  <button name="action_progress_complaint" string="Progress" type="object" attrs="{'invisible': [('state', 'not in', ['review'])]}"/>
                  <button name="action_solved_complaint" string="Done" type="object" attrs="{'invisible': [('state', 'not in', ['draft','review','progress'])]}"/>
                  <button name="action_drop_complaint" string="Reject" type="object" attrs="{'invisible': [('state', 'in', ['solved'])]}" />
                  <button name="action_reset" string="Reset" type="object" attrs="{'invisible': [('state', 'in', ['draft'])]}"/>

                <field name="state" widget="statusbar" statusbar_visible="draft,review,progress,solved,drop"/>
            </header>
            <sheet>
                    
        <group>
          <field name="customer_name"/>
          <field name="email"/>
          <field name="complaint_type"/>
          <field name="address"/>
          <field name="description"/>
            <field name="action_plan"/>

        </group>

            </sheet>
            <div class="oe_chatter">
                <field name="message_follower_ids"/>
                <field name="activity_ids"/>
                <field name="message_ids"/>
            </div>
        </form>
      </field>
    </record>

    <record id="realestate_complaint_view_kanban" model="ir.ui.view">
    <field name="name">realestate_complaint_management kanban</field>
    <field name="model">realestate.complaint</field>
    <field name="arch" type="xml">
          <kanban class="o_kanban_mobile" sample="1" quick_create="false" default_group_by="state">
                <field name="customer_name"/>
          <field name="email"/>
          <field name="complaint_type"/>
                        <field name="complaint_reference"/>

                <progressbar field="state"
                    colors='{"solved": "success", "review": "warning", "drop": "danger"}'/>
                <templates>
                    <t t-name="kanban-box">
                        <div t-attf-class="oe_kanban_card oe_kanban_global_click">
                            <div class="o_kanban_record_top mb16">
                                <div class="o_kanban_record_headings mt4">
                                    <strong class="o_kanban_record_title">
                                        <span t-out="record.complaint_reference.value"/>
                                    </strong>
                                </div>
                                <strong>
                                    <field name="customer_name"/>
                                </strong>
                            </div>
                            <div class="o_kanban_record_bottom">
                                <div class="oe_kanban_bottom_left text-muted">
                                    <span>
                                        <t t-out="record.complaint_type.value"/>
                                    </span>
                                    <field name="activity_ids" widget="kanban_activity"/>
                                </div>
                                <div class="oe_kanban_bottom_right">
                                    <field name="state"
                                        widget="label_selection"
                                        options="{'classes': {'draft': 'default', 'drop': 'default', 'solved': 'success'}}"/>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
    </field>
 </record>


    <!-- actions opening views on models -->
    <record model="ir.actions.act_window" id="realestate_complaint_management.action_window">
      <field name="name">Complaint Management</field>
      <field name="res_model">realestate.complaint</field>
      <field name="view_mode">kanban,tree,form</field>
    </record>


